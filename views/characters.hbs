<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item active">Characters</li>
</ol>
<h1>CHARACTERS</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="align-middle">Name</th>
      <th class="align-middle text-right"><a href="/characters/add" class="btn btn-sm btn-outline-success">Add</a></th>
    </tr>
  </thead>
  <tbody>
    {{#each characters}}
    <tr>
      <td class="align-middle"><a href="characters/{{id}}">{{name}}</a></td>
      <td class="align-middle text-right">
        <a href="characters/{{id}}/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
