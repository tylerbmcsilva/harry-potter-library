<ol class="breadcrumb bg-white">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item"><a href="/characters">Characters</a></li>
  <li class="breadcrumb-item active">{{#if character}}Edit{{else}}Add{{/if}} Concentration</li>
</ol>
<h1>{{#if character}}Edit{{else}}Add{{/if}} Concentration</h1>
<form method="post">
  <div class="hidden-xs-up">
    <input class="hidden-xs-up" type="hidden" name="hpcharacter_id" value="{{character_id}}" />
  </div>
  <div class="form-group row">
    <label for="concentration_id" class="col-2 col-form-label">Concentration</label>
    <div class="col-10">
      <select class="form-control" name="concentration_id" id="concentration_id" required>
        {{#each concentrations}}
        <option value="{{id}}">{{title}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
