<ol class="breadcrumb bg-white">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item"><a href="/characters">Characters</a></li>
  <li class="breadcrumb-item active">{{#if character}}Edit{{else}}Add{{/if}} Relation</li>
</ol>
<h1>{{#if character}}Edit{{else}}Add{{/if}} Relation</h1>
<form method="post">
  <div class="hidden-xs-up">
    <input class="hidden-xs-up" type="hidden" name="hpcharacter_id" value="{{character_id}}" />
  </div>
  <div class="form-group row">
    <label for="char2_id" class="col-2 col-form-label">Character</label>
    <div class="col-10">
      <select class="form-control" name="char2_id" id="char2_id" required>
        {{#each characters}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group row">
    <label for="relation" class="col-2 col-form-label">Relation</label>
    <div class="col-10">
      <select class="form-control" name="relation" id="relation" required>
        <option value="Parent">Parent</option>
        <option value="Spouse">Spouse</option>
        <option value="Child">Child</option>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
