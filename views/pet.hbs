{{#if error}}
<div class="alert alert-danger" role="alert">
  <h3 class="alert-heading">The nargles are at it again...</h3>
  <p>{{error}}</p>
</div>
{{else}}
<ol class="breadcrumb bg-white">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item"><a href="/characters">Characters</a></li>
  <li class="breadcrumb-item"><a href="/characters/{{data.owner_id}}">{{data.owner_name}}</a></li>
  <li class="breadcrumb-item active">{{data.name}}</li>
</ol>
<div class="row">
  <div class="col-11">
    <h2>{{data.name}}</h2>
  </div>
  <div class="col-1">
    <a href="/pets/{{data.id}}/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
  </div>
</div>
<p>{{data.description}}</p>
<table class="table">
  <tr>
    <td><strong>Owner</strong></td>
    <td><a href="/characters/{{data.owner_id}}">{{data.owner_name}}</a></td>
  </tr>
  <tr>
    <td><strong>Type</strong></td>
    <td>{{data.type}}</td>
  </tr>
  <tr>
    <td><strong>Age</strong></td>
    <td>{{data.age}}</td>
  </tr>
</table>
{{/if}}
