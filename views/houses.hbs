<ol class="breadcrumb bg-white">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item"><a href="/schools">Schools</a></li>
  <li class="breadcrumb-item active">Houses</li>
</ol>
<h1>All Houses</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="align-middle">Name</th>
      <th class="align-middle text-right"><a href="/houses/add" class="btn btn-sm btn-outline-success">Add</a></th>
    </tr>
  </thead>
  <tbody>
    {{#each houses}}
    <tr>
      <td class="align-middle"><a href="houses/{{id}}">{{name}}</a></td>
      <td class="align-middle text-right">
        <a href="houses/{{id}}/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
